<div class="product-price">
  {% if product.compare_at_price > product.price %}
    {% if product.price_varies %}
      <span
        >From {{ product.price_min | money }} - <span>{{ product.price_max | money }}</span></span
      >
    {% else %}
      <span class="product-price">{{ product.price | money }}</span> -
      <del style="color: gray;" class="product-compare-price">{{ product.compare_at_price | money }}</del>
    {% endif %}
  {% else %}
    {% if product.price_varies %}
      <span
        >From {{ product.price_min | money }} - <span>{{ product.price_max | money }}</span></span
      >
    {% else %}
      <span class="product-price">{{ product.price | money }}</span>
    {% endif %}
  {% endif %}
  <br>
  <a href="{{ product.url }}"> {{ product.title }} </a>
</div>
